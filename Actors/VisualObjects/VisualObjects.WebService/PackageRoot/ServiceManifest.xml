<?xml version="1.0" encoding="utf-8"?>
<ServiceManifest Name="VisualObjects.WebServicePkg"
                 Version="1.0.0"
                 xmlns="http://schemas.microsoft.com/2011/01/fabric"
                 xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ServiceTypes>

    <!-- This is the name of your ServiceType. This name must match the name defined by ServiceType
         member variable in Service.cs and registered with FabricRuntime in ServiceHost.cs
      -->
    <StatelessServiceType ServiceTypeName="VisualObjects.WebServiceType" />
  </ServiceTypes>

  <!-- Code package is your service executable. 
    -->
  <CodePackage Name="Code" Version="1.0.0">
    <EntryPoint>
      <ExeHost>
        <Program>VisualObjects.WebService.exe</Program>
      </ExeHost>
    </EntryPoint>
  </CodePackage>

  <!-- Config package is the contents of the Config directoy under PackageRoot
       that contains an independently-updateable and versioned set of custom configuration settings for your service.
      -->
  <ConfigPackage Name="Config" Version="1.0.0"/>
  
  <Resources>
    <Endpoints>
      <!-- This endpoint is used by the web communication listener to obtain the port on which to 
       listen.
        -->
      <Endpoint Name="ServiceEndpoint" Type="Input" Protocol="http" Port="8081" />
    </Endpoints>
  </Resources>
</ServiceManifest>